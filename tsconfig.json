{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "maxNodeModuleJsDepth": 0
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "node_modules/inquirer"]
}
